<% params[:included_tags] = params[:included_tags].present? ? params[:included_tags] : '230'   %>
<% params[:and_tags] = params[:and_tags].present? ? params[:and_tags] : '166'   %>

<% unless params[:page].to_i > 1  %>
<div class="wrapper row header">
  <div class="large-8 columns">
    <ul id="tab-anchors" class="header-navigation">
      <li  id="tab-anchor-1" class = <%= (params[:and_tags].include? '230') ? "current" : "" %>>
        <%= link_to "Official ACL", search_unofficialacl_index_path(and_tags: 230), method: :post, remote:true %>
      </li>
      <li id="tab-anchor-2" class = <%= (params[:and_tags].include? '247') ? "current" : "" %>>
        <%= link_to "Official Night Late Shows", search_unofficialacl_index_path(and_tags: 247), method: :post, remote:true %>
      </li>
      <li id="tab-anchor-3" class = <%= (params[:and_tags].include? '232') ? "current" : "" %>>
        <%= link_to "Unofficial ACL", search_unofficialacl_index_path(and_tags: 232), method: :post, remote:true %>
      </li>
      <li id="tab-anchor-4" class = <%= (params[:and_tags].include? '15') ? "current" : "" %>>
        <%= link_to "Local Recommendations", search_unofficialacl_index_path(and_tags: 15), method: :post, remote:true %>
      </li>
    </ul>
  </div>

  <div class="large-4 columns">
    <div class="small-navbar-note">Show me events with:</div>
    <div id="small-navbar">
      <ul>
        <li><%= link_to "Free drinks", search_unofficialacl_index_path(and_tags: 166), method: :post, remote:true, class: (params[:and_tags].include? '166') ? "active" : "" %></li>
        <li><%= link_to "free food", search_unofficialacl_index_path(and_tags: 165), method: :post, remote:true, class: (params[:and_tags].include? '165') ? "active" : "" %></li>
        <li><%= link_to "party", search_unofficialacl_index_path(and_tags: 130), method: :post, remote:true, class: (params[:and_tags].include? '130') ? "active" : "" %></li>
        <li><%= link_to "no cover", search_unofficialacl_index_path(and_tags: 167), method: :post, remote:true, class: (params[:and_tags].include? '167') ? "active" : "" %></li>
        <li><%= link_to "RSVP", search_unofficialacl_index_path(and_tags: 182), method: :post, remote:true, class: (params[:and_tags].include? '182') ? "active" : "" %></li>
      </ul>
    </div>
  </div>
</div>
<% end %>

<!-- tab offical ACL -->
<div class="content tab" id="tab-1">

  <% @occurrences.each_with_index do |occurrence, count| %>
      <% count = 0 if count == 18 %>

      <!-- Big things: column left -->
       <% if (0..4).include?(count) %>

          <% if count == 0 %>
            <div class="row"><!--Row tag for first 19 elements -->
              <div class="large-6 columns left ptm stretch"><!--(0..4) events left -->
          <% end %>
             <div class="big-event-container clearfix">
               <div class="event-image">
                 <!--<img src="<%#= occurrence.event.cover_image_url ? occurrence.event.cover_image_url : "/assets/placeholder.png" %>" />-->
                 <img src="<%= occurrence.event.pictures.first ? occurrence.event.pictures.first.image_url(:large) : "/assets/placeholder.png" %>" />
               </div>
               <div class="text antialiased">
                 <a class="event-title" href="unofficialacl/show_event?event_id=<%= occurrence.id %>"><%= truncate(occurrence.event.title, :length => 18) %></a>
                 <p class="event-tags">
                   <% if occurrence.event.tags.count > 0 %>
                     <% occurrence.event.tags.each_with_index  do |tag, index| %>
                       <span><%= tag.name %></span>
                       <% if index == 1 %><% break %><% else %>,<% end %>
                     <% end %>
                   <% end %>
                 </p>
               </div>
             </div>
          <% if count == 4 %>
            </div> <!--End of (0..4) events left -->
          <% end %>

        <!-- Small things: column right -->
       <% elsif (5..18).include?(count) %>

          <% if count == 5 %>
            <div class="large-6 columns rightCol ptm stretch">   <!--(5..18) events right -->
              <ul class="small-block-grid-2">
          <% end %>
             <li class="mix freedrink">
                 <div class="small-event-container">
                   <div class="event-image">
                     <img src="<%= occurrence.event.pictures.first ? occurrence.event.pictures.first.image_url(:large) : "/assets/placeholder.png" %>" />
                   </div>
                   <div class="text antialiased">
                     <a class="event-title" href="unofficialacl/show_event?event_id=<%= occurrence.id %>"><%= truncate(occurrence.event.title, :length => 18) %></a>
                     <p class="event-tags">
                       <% if occurrence.event.tags.count > 0 %>
                         <% occurrence.event.tags.each_with_index  do |tag, index| %>
                           <span><%= tag.name %></span>
                           <% if index == 1 %><% break %><% else %>,<% end %>
                         <% end %>
                       <% end %>
                     </p>
                   </div>
                 </div>
             </li>
          <% if count == 18 %>
               </ul>
             </div>  <!--End of (5..18) events right -->
            </div> <!--End of Row tag for 19 elements -->
              <!--scrolling code
             <a href="#" class="scrollup pull-right">Scroll</a>
             <div class="by-center">Scroll Down to See More!
               <div id="triangle-down"></div>
             </div>
             -->
          <% end %>

       <% end %> <!--End if condition 0..19 -->
  <% end %> <!--End of main occurrences loop -->

</div>
