
<div class="wrapper row header">
  <div class="large-8 columns">
    <ul class="header-navigation">
      <li class="current"><%= link_to "Official ACL", search_unofficialacl_index_path(included_tags: 12), method: :post %></li>
      <li><%= link_to "Official Night Late Shows", search_unofficialacl_index_path(included_tags: 13), method: :post %></li>
      <li><%= link_to "Unofficial ACL", search_unofficialacl_index_path(included_tags: 14), method: :post %></li>
      <li><%= link_to "Local Recommendations", search_unofficialacl_index_path(included_tags: 15), method: :post %></li>
    </ul>
  </div>
  <div class="large-4 columns">
    <div class="small-navbar-note">Show me events with:</div>
    <div id="small-navbar">
      <ul>
        <li><%= link_to "Free drinks", search_unofficialacl_index_path(and_tags: 12), method: :post,class: "active" %></li>
        <li><%= link_to "free food", search_unofficialacl_index_path(and_tags: 13), method: :post %></li>
        <li><%= link_to "party", search_unofficialacl_index_path(and_tags: 14), method: :post %></li>
        <li><%= link_to "no cover", search_unofficialacl_index_path(and_tags: 15), method: :post %></li>
        <li><%= link_to "RSVP", search_unofficialacl_index_path(and_tags: 16), method: :post %></li>
      </ul>
    </div>
  </div>
</div>


<div class="content">
<div class="row">
<!-- Big things: column left -->
<div class="large-6 columns left ptm stretch">
  <% @occurrences.each_with_index do |occurrence, count| %>

  <a href="/?event_id=<%= occurrence.id %>">
    <div class="big-event-container clearfix">
      <div class="event-image">
        <img src="<%= occurrence.event.cover_image_url ? occurrence.event.cover_image_url : "/assets/placeholder.png" %>" />
      </div>
      <div class="text antialiased">
        <p class="event-title"><%= truncate(occurrence.event.title, :length => 18) %></p>
        <p class="event-tags">
          <% if occurrence.event.tags.count > 0 %>
              <% occurrence.event.tags.each_with_index  do |tag, index| %>
                  <span><%= tag.name %></span>
                  <% if index == 3 %><% break %><% else %>,<% end %>
              <% end %>
          <% end %>
        </p>
      </div>
    </div>
  </a>
      <% break if count == 4 %>
  <% end %>


  <div class="by-center">Scroll Down to See More!
    <div id="triangle-down"></div>
  </div>
</div>

<!-- Small things: column left -->
<div class="large-6 columns right ptm stretch">
<ul class="small-block-grid-2">
  <% @occurrences.each_with_index do |occurrence, count| %>
  <li>
    <a href="/?event_id=<%= occurrence.id %>">
      <div class="small-event-container clearfix">
        <div class="event-image">
          <img src="<%= occurrence.event.cover_image_url ? occurrence.event.cover_image_url : "/assets/placeholder.png" %>" />
        </div>
        <div class="text antialiased">
          <p class="event-title"><%= truncate(occurrence.event.title, :length => 18) %></p>
          <p class="event-tags">
            <% if occurrence.event.tags.count > 0 %>
                <% occurrence.event.tags.each_with_index  do |tag, index| %>
                    <span><%= tag.name %></span>
                    <% if index == 1 %><% break %><% else %>,<% end %>
                <% end %>
            <% end %>
          </p>
        </div>
      </div>
    </a>
  </li>
      <% break if count == 14 %>
  <% end %>




</ul>

</div>
</div>
</div>
