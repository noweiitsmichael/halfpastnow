<div class="content tab" id="tab-1">
<div class="row">
<!-- Big things: column left -->
<div class="large-6 columns leftCol ptm stretch">

  <% @default_venues.each do |venue| %>
    <div class="big-event-container clearfix">
      <div class="event-image">
        <img src="<%= venue.pictures.first ? venue.pictures.first.image_url(:large) : "/assets/placeholder.png" %>" />
      </div>
      <div class="text antialiased">
        <a class="event-title" href="unofficialacl/show_venue/<%= venue.id %>"><%= truncate(venue.name, :length => 20) %></a>
        <p class="event-tags">
          <span>Happy Hours</span>, <span>Live music</span>
          <% if venue.tags.count > 0 %>
              <% venue.tags.each_with_index  do |tag, index| %>
                  <span><%= tag.name %></span>
                  <% if index == 1 %><% break %><% else %>,<% end %>
              <% end %>
          <% end %>
        </p>
      </div>
    </div>
  <% end %>

</div>

<!-- Small things: column right -->
<div class="large-6 columns rightCol ptm stretch">
<ul class="small-block-grid-2">
  <% (1..14).each do |venue| %>
  <li class="mix freedrink">

    <div class="small-event-container">
      <div class="event-image">
        <img src="assets/acl/content/b.jpg">
      </div>
      <div class="text antialiased">
        <a class="event-title" href="detail.html">This is an small event</a>
        <p class="event-tags"><span>Happy Hours</span>, <span>Live music</span></p>
      </div>
    </div>

  </li>
  <% end %>
</ul>

</div>
</div>
</div>