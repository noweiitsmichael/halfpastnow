<% offset = offset || 0 %>

<% if occurrences.size > 0 %>
	<% if @mobileMode %>
		<% occurrences.each_with_index do |occurrence, index| %>
		<%= render :partial => "events/android_event_element", :locals => { :occurrence => occurrence, :index => index + offset, :bookmarkList => (defined? bookmarkList) ? bookmarkList : nil } %>
		<% end %>
	<% else %>
		<% occurrences.each_with_index do |occurrence, index| %>
		<%= render :partial => "events/event_element", :locals => { :occurrence => occurrence, :index => index + offset, :bookmarkList => (defined? bookmarkList) ? bookmarkList : nil } %>
		<% end %>
	<% end %>
  <% end %>
<% if venues_lists.size > 0 %>
  <% venues_lists.each do |venue| %>
    <%= render :partial => "events/venue_element", :locals => { :venue_list => venue, :bookmarkList => (defined? bookmarkList) ? bookmarkList : nil } %>
  <% end %>
  <% end %>

