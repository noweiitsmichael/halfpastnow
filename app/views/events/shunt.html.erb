<% content_for :title do %>
	<h1>Sign Up <em style="font-style:normal;">|</em> Log In</h1>
<% end %>

<% content_for :body do %>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=475386955806720";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
	
	<div style="text-align: center">
		<br>
		Login with Facebook to see events friends are bookmarking in the categories you care about
		<br>
		<br>
		<a href="/users/auth/facebook" class="fb-login nice-button facebook-button">
						<i class="icon-facebook"></i>
						Connect with Facebook
		</a>
	</div>		

	<br>
	<div style="text-align: center"> - or - </div>

	<div class="method signup">
		<h4>Register via Email</h4>

		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true) do |f| %>
		  <%= devise_error_messages! %>

		  <div><%= f.label :email %>
		  <%= f.email_field :email %></div>

			<div><%= f.label :firstname, "first name" %>
			<%= f.text_field :firstname %></div>

			<div><%= f.label :lastname, "last name" %>
			<%= f.text_field :lastname %></div>

		  <div><%= f.label :password %>
		  <%= f.password_field :password %></div>

		  <div><%= f.label :password_confirmation %>
		  <%= f.password_field :password_confirmation %></div>

		  <div><%= f.submit "Register" %></div>
		<% end %>
	</div>
	<div class="method login">
		<h4>Sign In via Email</h4>

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		    <div><%= f.label :email %>
		    <%= f.email_field :email %></div>

		    <div><%= f.label :password %>
		    <%= f.password_field :password %></div>

		    <div><%= f.submit "Sign in" %></div>
	    <% end %>
	    <br>
	    <div class="reasons-box">
		    <h5>Help us help you by creating an account! </h5>
		    <br>
			    <ul>
			    	<li>-  Choose categories that interest you</li>
			    	<li>-  Receive picks based on authentic experts</li>
			    	<li>-  Save your searchs for future use</li>
			    </ul>
		</div>
	   
	</div>
<% end %>