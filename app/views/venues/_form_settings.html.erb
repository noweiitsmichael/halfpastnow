    </div>
    <div class="field">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :phonenumber %>
      <%= f.text_field :phonenumber %>
    </div>
    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address, :class => 'location required' %>
    </div>
    <div class="field">
      <%= f.label :address2 %>
      <%= f.text_field :address2 %>
    </div>
    <div class="field">
