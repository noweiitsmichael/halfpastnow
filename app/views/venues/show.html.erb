<% content_for :title do %>
	<%= render :partial => "layouts/bookmark", :locals => { :element => @venue } %>
	<h1><span class="icon-home"></span><%= @venue.name %></h1>
<% end %>


<% content_for :body do %>
<%= javascript_include_tag "galleria-1.2.8.min" %>
	<div class="col-1">
		<% unless @venue.description.to_s.empty? %>
			<div class="description block">
				<h2>Details</h2>
				<div class="block-inner">
					<%= raw(@venue.description) %>
				</div>
			</div>
		<% end %>
		<% unless @occurrences.length == 0 && @recurrences.length == 0 %>
			<div class="calendar block">
				<h2>Calendar</h2>
				<div class="block-inner">
					<%= render :partial => "events/calendar", :locals => { :occurrences => @occurrences, :recurrences => @recurrences, :options => { :venue => false } } %>
				</div>
			</div>
		<% end %>
	</div>
	<div class="col-2">
		<div class="block"><div class="block-inner">
				<% if current_user %>
					<% holding_tank = current_user.bookmarked_venues.where(:id => @venue.id) %>
					<% puts "Found bookmark:" %>
					<% puts holding_tank %>
				<% end %>
				<%= render :partial => "layouts/bookmark", :locals => { :element => @venue, :bookmark_type => "Venue", :bookmark_already => holding_tank } %>
		</div></div>
		<div class="block">
			<a class="map-link" href="http://maps.google.com/maps?q=<%= @venue.latitude %>,<%= @venue.longitude %>" style="float: left;"><img class="map" src="http://maps.googleapis.com/maps/api/staticmap?size=358x358&zoom=15&maptype=roadmap&markers=color:black%7C<%= @venue.latitude %>,<%= @venue.longitude %>&style=feature:all|hue:0x000001|saturation:-100&sensor=false"/></a>
			<div class="block-inner">
				<div><strong><%= @venue.name %></strong></div>				
				<div><%= @venue.address %></div>
				<div><%= @venue.city + ", " + @venue.state + " " + @venue.zip.to_s %></div>
				<% unless @venue.phonenumber.to_s.empty? && @venue.url.to_s.empty? %><br /><% end %>
				<div><%= @venue.phonenumber %></div>
				<div><a href="<%= @venue.url %>"><%= @venue.url %></a></div>
			</div>
		</div>

		<div id="galleria">
			<% unless @venue.fb_picture.blank?%>
				<img src="<%= @venue.fb_picture%>" data-title="<%= @venue.name %>" >
			<% end %>
            <% @venue.pictures.each do |pic| %>
			    <a href="<%=pic.image_url(:large).to_s%>"><img src="<%=pic.image_url(:tiny).to_s%>" data-title="<%= @venue.name %>" data-big="<%=pic.image_url(:full).to_s%>" ></a>
		    <% end %>
        </div>

        <script>
            Galleria.loadTheme('assets/galleria.classic.min.js');
            $('#galleria').galleria({
		        width:358,
		        height:358,
		        lightbox:true
		    });
        </script>

	</div>
	<div class="clear"></div>
<% end %>