<% content_for :head do %>
	<%= stylesheet_link_tag "devise" %>
 	<%= javascript_include_tag "jquery.form" %>
 	<%= stylesheet_link_tag "jcrop" %>
    <% if false %><%= javascript_include_tag "users" %><% end %>
<% end %>
<% content_for :header do %>
	<div class="titlebar">
		<div class="stay-on-target">
			<h1><%= yield :title %></h1>
		</div>
	</div>
<% end %>
<% content_for :body do %>
	<div id="info-content">
		<%= yield :content %>
	</div>
<% end %>
<%= render :template => 'layouts/application' %>