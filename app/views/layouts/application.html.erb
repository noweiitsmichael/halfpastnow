<!DOCTYPE html>
<html>
<head>
  <title>half past now.</title>

  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "jquery-ui" %>
  <%= javascript_include_tag "jquery-ui-timepicker-addon" %>
  <%= javascript_include_tag "viewport" %>
  <%= javascript_include_tag "date" %>
  <%= javascript_include_tag "main" %>
  <%= javascript_include_tag "tokeninput" %>
  <%= javascript_include_tag :defaults %>
  <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyCuX99Cn10qLVF0AQNRzduy012YqkaIXgk&sensor=false"></script>
  <%= javascript_include_tag "markerwithlabel" %>
  
  <%= stylesheet_link_tag    "styles" %>
  <%= stylesheet_link_tag    "jquery-ui" %>
  <%= stylesheet_link_tag "token-input-facebook" %>

  <%= csrf_meta_tags %>
</head>
<body onload="if(typeof initialize !== 'undefined') initialize();">
	<%= yield :code %>
	<!-- Devise needs it? 
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>-->
	
  <div id="body">
    <div id="header">
      <div class="one">
        <a href="/"><img class="logo" src="/assets/halfpastnow.png" /></a>
        <div class="menu-element"><a href="/info/about">about us</a></div>
        <div class="menu-element"><a href="/info/contact">contact us</a></div>
        <div class="menu-element right"><% if user_signed_in? %>
                <%= link_to('logout', destroy_user_session_path, :method => 'delete') %>        
              <% else %>
                <%= link_to('login', new_user_session_path)  %>  
              <% end %> / 
              <% if user_signed_in? %>
                <%= link_to('edit registration', edit_user_registration_path) %>
              <% else %>
                <%= link_to('register', new_user_registration_path)  %>
              <% end %>
        </div>
      </div>
      <%= yield :header%>
    </div>
    <%= yield :body %>
  </div>
  <%= yield :overlay %>
</body>
</html>
