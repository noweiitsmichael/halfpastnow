<% unless @user.nil? %>
  <div class="page-content">
    <!-- PAGE CONTENT BEGINS -->
    <div class="page-header">
      <h1>
        Advertisements List
        <span class="pull-right"><%= link_to "Create Ads", new_admin_advertisement_path, class: 'btn btn-sm btn-purple' %></span>
      </h1>
    </div>
    <div class="page-body">
      <div class="table-responsive">
        <div role="grid" class="dataTables_wrapper" id="sample-table-2_wrapper">
          <table class="table table-striped table-bordered table-hover dataTable" id="sample-table-2" aria-describedby="sample-table-2_info">
            <thead>
            <tr role="row">
              <th>Type</th>
              <th>Title</th>
              <th>Advertiser</th>
              <th><i class="icon-time bigger-110 hidden-480"></i> Start</th>
              <th><i class="icon-time bigger-110 hidden-480"></i> End</th>
              <th>Views</th>
              <th>Clicks</th>
              <th>Image</th>
            </tr>
            </thead>

            <tbody role="alert" aria-live="polite" aria-relevant="all">
            <% @advertisements.each do|adv| %>
              <tr class="<%= cycle("odd", "even") %>">
                <td><%= Advertisement::ADV_TYPES.invert[adv.adv_type] %></td>
                <td><%= link_to adv.title, admin_advertisement_path(adv) %></td>
                <td><%= adv.advertiser %></td>
                <td><%= adv.start.to_date.strftime("%m/%d/%Y") %></td>
                <td><%= adv.end.to_date.strftime("%m/%d/%Y") %></td>
                <td><%= adv.views.to_i %></td>
                <td><%= adv.clicks.to_i %></td>
                <td><%= image_tag adv.image.tiny %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <div class="row  <%= @advertisements.total_entries > 10 ? '' : 'hide' %>">
            <div class="dataTables_paginate paging_bootstrap center">
              <%= will_paginate @advertisements, renderer: BootstrapPagination::Rails %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<% else %>
  <h1 class="text-center text-danger"> Something is Wrong</h1>
<% end %>