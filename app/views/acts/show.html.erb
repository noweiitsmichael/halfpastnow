<% content_for :title do %>
	<h1><%= @act.name %></h1><% end %>

<% content_for :body do %>
<%= javascript_include_tag "galleria-1.2.8.min" %>
	<ul class="sub-header">
		<% unless @act.tags.length == 0 %>
			<li><%= @act.tags.collect { |tag| tag.name } * " / " %></li>
		<% end %>
	</ul>
	<div class="col-1">
		<% unless @act.description.to_s.empty? %>
			<div class="description block">
				<h2>Details</h2>
				<div class="block-inner">
					<%= raw(@act.description) %>
				</div>
			</div>
		<% end %>
		<% unless @act.embeds.length == 0 %>
			<div class="embeds block">
				<div class="block-inner">
					<% @act.embeds.select { |e| e.primary }.each do |embed| %>
						<%= raw(embed.source) %>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
	<div class="col-2">
		<div class="block"><div class="block-inner">
			<% if current_user.bookmarked_acts.where(:id => @act.id).exists? %>
				<% bookmk = Bookmark.where(:bookmarked_id => @act.id, :bookmarked_type => "Act", :user_id => current_user.id).first %>
				<%= button_to "Remove Bookmark", bookmk, :method => :delete, :class => "button white" %>
			<% else %>
				<% bkmrk = Bookmark.new %>
				<%= form_for bkmrk, :url => "/bookmarks/create" do |f| %>
					<div><%= f.hidden_field :bookmarked_id, :value => @act.id %></div>
					<div><%= f.hidden_field :bookmarked_type, :value => "Act" %></div>
					<div><%= f.hidden_field :user_id, :value => current_user.id %></div>
					<%= f.submit 'Bookmark it!', :class => 'button orange' %>
				<% end %>
			<% end %>
		</div></div>
		<div id="galleria">
			<% unless @act.fb_picture.blank?%>
				<img src="<%= @act.fb_picture%>" data-title="<%= @act.name %>" >
			<% end %>
            <% @act.pictures.each do |pic| %>
			    <a href="<%=pic.image_url(:large).to_s%>"><img src="<%=pic.image_url(:tiny).to_s%>" data-title="<%= @act.name %>" data-big="<%=pic.image_url(:full).to_s%>" ></a>
		    <% end %>
        </div>

        <script>
            Galleria.loadTheme('assets/galleria.classic.min.js');
            $('#galleria').galleria({
		        width:400,
		        height:300,
		        lightbox:true
		    });
        </script>

		<div class="calendar block">
			<h2>Calendar</h2>
			<div class="block-inner">
				<%= render :partial => "events/calendar", :locals => { :occurrences => @occurrences, :recurrences => @recurrences } %>
			</div>
		</div>

	</div>
	<div class="clear"></div>
<% end %>