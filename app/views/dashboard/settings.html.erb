<% unless @user.nil? %>
  <div class="page-content">
    <!-- PAGE CONTENT BEGINS -->
    <div class="page-header">
      <h1><%= @user.firstname rescue 'user' %> Settings</h1>
    </div>
    <div class="page-body">
      <div class="row">
        <div class="col-sm-7 col-sm-offset-1">
          <div class="widget-box">
            <div class="widget-header">
              <h4><i class="blue icon-key bigger-100"></i>Change Password</h4>
            </div>

            <div class="widget-body">
              <div class="widget-main no-padding">
                <div class="password_flash"></div>
                <%= form_for(resource, :as => resource_name, :url => "/update_password", :html => {:method => :post, :id => "edit_password", class: 'form-horizontal', remote: true}) do |f| %>
                  <div class="space-4"></div>
                  <div class="form-group">
                    <%= f.label :password, class: 'col-sm-4 control-label no-padding-right' %>
                    <div class="col-sm-8">
                      <%= f.password_field :password %>
                    </div>
                  </div>

                  <div class="space-4"></div>
                  <div class="form-group">
                    <%= f.label :password_confirmation, class: 'col-sm-4 control-label no-padding-right' %>
                    <div class="col-sm-8">
                      <%= f.password_field :password_confirmation %>
                    </div>
                  </div>

                  <div class="space-4"></div>
                  <div class="form-group">
                    <%= f.label :current_password, class: 'col-sm-4 control-label no-padding-right' %>
                    <div class="col-sm-8">
                      <%= f.password_field :current_password %>
                      <span class="help-block">we need your current password to confirm your changes.</span>
                    </div>
                  </div>

                  <div class="space-4"></div>
                  <div class="form-group">
                    <%= f.label :auto_share, "Auto Update Activity", class: 'col-sm-4 control-label no-padding-right' %>
                    <div class="col-sm-8">
                      <label>
                        <%= f.check_box :auto_share,checked: current_user.auto_share, class: "ace ace-switch ace-switch-3", onClick: "$.post('/users/change_share_status')" %>
                        <span class="lbl"></span>
                      </label>
                    </div>
                  </div>

                  <div class="clearfix form-actions">
                    <div class="col-md-offset-4 col-md-8">
                      <button class="btn btn-purple" type="submit">
                        <i class="icon-ok bigger-110"></i>
                        Submit
                      </button>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
<% else %>
  <h1 class="text-center text-danger"> Something is Wrong</h1>
<% end %>